# Configuración específica para testing
NODE_ENV=test
BASE_URL=http://localhost:3001

# Deshabilitar PWA durante tests para evitar warnings de Workbox
DISABLE_PWA=true

# Firebase Testing Project (Cliente - Next.js)
NEXT_PUBLIC_FIREBASE_API_KEY=YOUR_FIREBASE_API_KEY
NEXT_PUBLIC_FIREBASE_AUTH_DOMAIN=your-project-id.firebaseapp.com
NEXT_PUBLIC_FIREBASE_PROJECT_ID=your-project-id
NEXT_PUBLIC_FIREBASE_STORAGE_BUCKET=your-project-id.firebasestorage.app
NEXT_PUBLIC_FIREBASE_MESSAGING_SENDER_ID=YOUR_MESSAGING_SENDER_ID
NEXT_PUBLIC_FIREBASE_APP_ID=YOUR_FIREBASE_APP_ID
NEXT_PUBLIC_FIREBASE_MEASUREMENT_ID=YOUR_MEASUREMENT_ID

# Firebase Testing Project (Servidor)
FIREBASE_TEST_PROJECT_ID=your-project-id
FIREBASE_TEST_DATABASE_URL=https://your-project-id-default-rtdb.europe-west1.firebasedatabase.app/
FIREBASE_TEST_STORAGE_BUCKET=your-project-id.firebasestorage.app

# Credenciales de Firebase para testing
FIREBASE_ADMIN_PRIVATE_KEY_ID=YOUR_PRIVATE_KEY_ID
FIREBASE_ADMIN_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\nYOUR_PRIVATE_KEY_CONTENT\n-----END PRIVATE KEY-----\n"
FIREBASE_ADMIN_CLIENT_EMAIL=firebase-adminsdk-xxxx@your-project-id.iam.gserviceaccount.com
FIREBASE_ADMIN_CLIENT_ID=YOUR_CLIENT_ID

# NextAuth para testing
NEXTAUTH_URL=http://localhost:3001
NEXTAUTH_SECRET=YOUR_NEXTAUTH_SECRET_HERE

# Testing flags
IS_TESTING_ENVIRONMENT=true
AUTO_CLEANUP_TEST_DATA=true